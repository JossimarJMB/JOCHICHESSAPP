<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_torneo1"

    tools:context=".TorneoMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_torneo1"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:gravity="center"
                android:text="Torneo"
                android:textColor="#020AA7"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/buttonT1"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/tema_boton2"
                android:text="A rondas"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/buttonT2"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/tema_boton2"
                android:text="Round robin"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="40dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>