<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EjerciciosMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lecciones1"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:gravity="center"
                android:text="Ejercicios"
                android:textColor="#020AA7"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b1"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tema_boton3"
                android:text="MATES EN 1" />

            <Button
                android:id="@+id/b2"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_marginTop="10dp"
                android:background="@drawable/tema_boton3"
                android:text="MATES EN 2" />

            <Button
                android:id="@+id/b3"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tema_boton3"
                android:text="MATES EN 3" />

            <Button
                android:id="@+id/b4"
                android:layout_width="330dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tema_boton3"
                android:text="VENTAJA DECISIVA" />

    </LinearLayout>
    </ScrollView>


</LinearLayout>