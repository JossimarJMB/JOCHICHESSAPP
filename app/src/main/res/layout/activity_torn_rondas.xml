<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TornRondas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tr1"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:gravity="center"
                android:text="Torneo a rondas"
                android:textColor="#020AA7"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tv_tr2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="Nombre del torneo:"
                android:textColor="#4CAF50"
                android:textSize="27sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/et_tr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="20"
                android:hint="Ingrese nombre"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tv_tr3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="Número de participantes:"
                android:textColor="#4CAF50"
                android:textSize="27sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_torneoRondas4"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="Número de rondas"
                android:textColor="#4CAF50"
                android:textSize="27sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <RadioGroup
                android:id="@+id/rg_torneoRondas2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rb_torneoRondasx4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="2"
                    android:onClick="onRadioButtonClickedVal"/>

                <RadioButton
                    android:id="@+id/rb_torneoRondas4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="3"
                    android:onClick="onRadioButtonClickedVal"/>

                <RadioButton
                    android:id="@+id/rb_torneoRondas5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="4"
                    android:onClick="onRadioButtonClickedVal"/>

                <RadioButton
                    android:id="@+id/rb_torneoRondas6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="5"
                    android:onClick="onRadioButtonClickedVal"/>


            </RadioGroup>

            <Button
                android:id="@+id/btr1"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/tema_boton2"
                android:text="Crear torneo"
                android:textColor="#000037"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:onClick="onButtonClicked"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>